                </div>
            <% } else { %>
                <div class="stepper">
                    <% stepNames.forEach((name, index) => { 
                        let statusClass = '';
                        if (index < currentStepIndex) statusClass = 'completed'; 
                        else if (index === currentStepIndex) statusClass = 'active'; 
                        let iconClass = 'fa-circle';
                        if (index === 0) iconClass = 'fa-file-alt';
                        else if (index === 1) iconClass = 'fa-clipboard-check';
                        else if (index === 2) iconClass = 'fa-truck';
                        else if (index === 3) iconClass = 'fa-check-circle';
                    %>
                        <div class="step <%= statusClass %>">
                            <% if (index > 0) { %>
                                <div class="step-line <%= index <= currentStepIndex ? 'completed' : '' %>"></div>
                            <% } %>
                            <div class="step-icon"><i class="fas <%= iconClass %>"></i></div>
                            <div class="step-label"><%= name %></div>
                            <% if (index === 0 && currentStepIndex >= 0) { %>
                                <div class="step-time"><%= new Date(order.createdAt).toLocaleDateString('vi-VN') %></div>
                            <% } %>
