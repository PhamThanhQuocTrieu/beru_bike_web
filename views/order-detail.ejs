    <link rel="stylesheet" href="/style/header.css">
    <link rel="stylesheet" href="/style/footer.css">
    <link rel="stylesheet" href="/style/order-detail.css">
    <link rel="icon" type="image/x-icon" href="/image/logo/favicon.png">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        /* GI·ªÆ NGUY√äN CSS C≈® CHO INFO CARD & GRID */
        .info-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px; }
        .info-card { background: #fff; padding: 20px; border-radius: 4px; box-shadow: 0 1px 1px 0 rgba(0, 0, 0, .05); }
        .info-card h3 { font-size: 16px; margin-bottom: 15px; color: #333; border-bottom: 1px solid #eee; padding-bottom: 10px; }
        .detail-items { background: #fff; border-radius: 4px; box-shadow: 0 1px 1px 0 rgba(0, 0, 0, .05); margin-bottom: 20px; }
        @media (max-width: 768px) { .info-grid { grid-template-columns: 1fr; } }
        
        /* STYLE CHO BADGE TR·∫†NG TH√ÅI */
        .badge { font-weight: bold; padding: 3px 8px; border-radius: 4px; font-size: 12px; }
        .badge.paid { color: #155724; background-color: #d4edda; border: 1px solid #c3e6cb; }
        .badge.pending { color: #856404; background-color: #fff3cd; border: 1px solid #ffeeba; }
        .badge.failed { color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; }

        .actions-right { display: flex; justify-content: flex-end; gap: 10px; margin-top: 20px; padding-top: 20px; border-top: 1px dashed #e0e0e0; }
        
        /* Button Styles */
        .btn-primary-detail { 
            background: #ee4d2d; color: #fff; border: 1px solid #ee4d2d; 
            padding: 10px 40px; border-radius: 4px; cursor: pointer; 
            font-size: 14px; min-width: 150px; text-decoration: none; 
            display: inline-block; text-align: center; 
        }
        
        /* [UPDATED] N√∫t Quay l·∫°i / Outline */
        .btn-outline-detail { 
            background: #fff; color: #555; border: 1px solid #ddd; 
            padding: 10px 20px; border-radius: 4px; cursor: pointer; 
            text-decoration: none; display: inline-block;
            transition: all 0.3s ease;
        }
        .btn-outline-detail:hover {
            background: #f8f8f8; border-color: #7a7171; color: #333;
        }

        /* [UPDATED] N√∫t H·ªßy ƒê∆°n H√†ng (M√†u ƒê·ªè) */
        .btn-cancel-detail { 
            background: #fff; color: #dc3545; border: 1px solid #dc3545; 
            padding: 10px 30px; border-radius: 4px; cursor: pointer; 
            font-size: 14px; font-weight: 500;
            transition: all 0.3s ease; 
        }
        .btn-cancel-detail:hover {
            background: #dc3545; color: #fff; 
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }

        .payment-method-icon img { vertical-align: middle; margin-right: 5px; }

        /* STEPPER STYLES */
        .stepper-card { background: #fff; padding: 40px 20px; margin-bottom: 20px; border-radius: 4px; box-shadow: 0 1px 1px 0 rgba(0,0,0,.05); }
        .stepper { display: flex; justify-content: space-between; position: relative; }
        .step { display: flex; flex-direction: column; align-items: center; position: relative; z-index: 2; flex: 1; }
        .step-icon { width: 50px; height: 50px; border-radius: 50%; background: #fff; border: 4px solid #e0e0e0; color: #ccc; display: flex; align-items: center; justify-content: center; font-size: 20px; margin-bottom: 10px; transition: all 0.3s ease; }
        .step-label { font-size: 14px; color: #999; text-align: center; font-weight: 500; }
        .step-time { font-size: 12px; color: #aaa; margin-top: 5px; text-align: center; }
        .step-line { position: absolute; top: 25px; left: -50%; right: 50%; height: 4px; background: #e0e0e0; z-index: 1; }
        .step.active .step-icon { border-color: #ee4d2d; background: #ee4d2d; color: #fff; transform: scale(1.1); box-shadow: 0 0 10px rgba(238, 77, 45, 0.4); }
        .step.active .step-label { color: #ee4d2d; font-weight: bold; }
        .step.completed .step-icon { border-color: #26aa99; background: #fff; color: #26aa99; }
        .step.completed .step-label { color: #26aa99; }
        .step-line.completed { background: #26aa99; }
        .cancel-alert { background-color: #fff4f4; color: #c00; padding: 20px; border-radius: 4px; border: 1px solid #ffcccc; text-align: center; font-weight: bold; font-size: 16px; }
        .status-text { font-weight: bold; text-transform: uppercase; }
        .status-text.pending { color: #ffc107; }
        .status-text.confirmed { color: #17a2b8; }
        .status-text.shipping { color: #007bff; }
        .status-text.completed { color: #28a745; }
        .status-text.cancelled { color: #dc3545; }
    </style>
</head>

<body>
    <%- include('header') %>

    <div class="container detail-container">
        <div class="detail-header-card">
            <a href="/checkout/orders/list" class="back-link"><i class="fas fa-chevron-left"></i> TR·ªû L·∫†I</a>
            <div class="order-meta">
                <span>M√É ƒê∆†N H√ÄNG: #<%= order._id.toString().slice(-6).toUpperCase() %></span>
                <span class="divider">|</span>
                <span class="status-text <%= order.status %>">
                    <%= order.status==='pending' ? 'CH·ªú X·ª¨ L√ù' : 
                        order.status==='confirmed' ? 'ƒê√É X√ÅC NH·∫¨N' : 
                        order.status==='shipping' ? 'ƒêANG GIAO H√ÄNG' : 
