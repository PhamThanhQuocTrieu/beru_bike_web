      <div class="kpi-grid">
        <div class="kpi-card">
          <div class="kpi-title">Tổng Doanh thu</div>
          <div class="kpi-value">
            <% 
              let totalRev = 0;
              if (reports && reports.topProducts) {
                  totalRev = reports.topProducts.reduce((sum, item) => sum + item.revenue, 0);
              }
            %>
            <%= totalRev.toLocaleString('vi-VN') %> ₫
          </div>
          <div class="kpi-trend up"><i class="fas fa-arrow-up"></i> 12.5%</div>
        </div>

        <div class="kpi-card">
          <div class="kpi-title">Tổng sản phẩm đã bán</div>
          <div class="kpi-value">
            <% 
              let totalSold = 0;
              if (reports && reports.topProducts) {
                  totalSold = reports.topProducts.reduce((sum, item) => sum + item.sold, 0);
              }
            %>
            <%= totalSold %>
          </div>
          <div class="kpi-trend up"><i class="fas fa-arrow-up"></i> 8.2%</div>
        </div>

        <div class="kpi-card">
          <div class="kpi-title">Người dùng mới</div>
          <div class="kpi-value"><%= reports.newUsers ? reports.newUsers.length : 0 %></div>
          <div class="kpi-trend down"><i class="fas fa-arrow-down"></i> 2.1%</div>
        </div>

        <div class="kpi-card">
          <div class="kpi-title">Tỷ lệ chuyển đổi</div>
          <div class="kpi-value">3.2%</div>
          <div class="kpi-trend up"><i class="fas fa-arrow-up"></i> Ổn định</div>
        </div>
      </div>

      <section class="chart-section">
        <div class="section-header">
          <div class="section-title">Phân tích doanh thu Top sản phẩm</div>
        </div>
        <div style="height: 350px;">
          <canvas id="mainChart"></canvas>
        </div>
      </section>

      <div class="data-grid">
        <div class="data-card">
          <div class="card-header">
            <div class="section-title">Sản phẩm bán chạy nhất</div>
          </div>
          <div class="card-body">
            <table class="modern-table">
              <thead>
                <tr>
                  <th width="50%">Sản phẩm</th>
                  <th width="25%">Đã bán</th>
                  <th width="25%" style="text-align: right;">Doanh thu</th>
                </tr>
              </thead>
              <tbody>
                <% if(reports.topProducts && reports.topProducts.length > 0) { %>
                  <% reports.topProducts.forEach((item, index) => { 
                     let maxSold = reports.topProducts[0].sold || 1;
                     let percent = (item.sold / maxSold) * 100;
                     // FIX 1: Tách chuỗi CSS ra biến riêng để Editor không báo lỗi
                     let styleWidth = "width: " + percent + "%"; 
                  %>
                  <tr>
                    <td>
                      <div class="product-name">
                        <div class="product-icon"><i class="fas fa-box"></i></div>
                        <div>
                          <div style="font-weight: 600;"><%= item.name %></div>
                          <div style="font-size: 12px; color: #9ca3af;">Rank #<%= index + 1 %></div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div style="font-weight: 600;"><%= item.sold %></div>
                      <div class="progress-bar">
                        <div class="progress-fill" style="<%= styleWidth %>"></div>
                      </div>
                    </td>
                    <td style="text-align: right; font-weight: 600; color: #111;">
                      <%= item.revenue.toLocaleString('vi-VN') %> ₫
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                  <tr><td colspan="3" style="text-align: center;">Chưa có dữ liệu</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="data-card">
          <div class="card-header">
            <div class="section-title">Khách hàng mới</div>
          </div>
          <div class="card-body">
            <table class="modern-table">
              <thead>
                <tr>
                  <th>Người dùng</th>
                  <th style="text-align: right;">Ngày tham gia</th>
                </tr>
              </thead>
              <tbody>
                <% if(reports.newUsers && reports.newUsers.length > 0) { %>
                  <% reports.newUsers.forEach(user => { %>
                  <tr>
                    <td>
                      <div class="user-info">
                        <div class="user-avatar">
                          <%= user.email ? user.email.charAt(0).toUpperCase() : 'U' %>
                        </div>
                        <div>
                          <div style="font-weight: 500;"><%= user.email ? user.email.split('@')[0] : 'N/A' %></div>
                          <div style="font-size: 12px; color: #9ca3af;"><%= user.email %></div>
                        </div>
                      </div>
                    </td>
                    <td style="text-align: right; color: #6b7280;">
                      <%= new Date(user.createdAt).toLocaleDateString('vi-VN') %>
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                  <tr><td colspan="2" style="text-align: center;">Không có người dùng mới</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>

